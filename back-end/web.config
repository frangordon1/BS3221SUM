<configuration>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true" />
    <handlers>
      <remove name="OPTIONSVerbHandler" />
      <remove name="TRACEVerbHandler" />
      <add name="OptionsHandler" path="*" verb="OPTIONS" modules="IsapiModule" scriptProcessor="node.exe" resourceType="Unspecified" requireAccess="None" />
    </handlers>
  </system.webServer>
</configuration>
